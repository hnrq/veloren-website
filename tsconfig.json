{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", ".netlify/functions/*", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"],
      "@paraglide/*": ["src/paraglide/*"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles/index.css"]
    }
  }
}
